<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.fabi288.plugins.intent"
    version="1.3.4">

    <name>CSV Intent</name>
    
	<description>
		Registers an intent for "*.csv" files for your android app.
	</description>

	<license>MIT</license>

    <engines>
      <engine name="cordova" version=">=2.0.0" />
    </engines>	

	<platform name="android">
		<config-file target="AndroidManifest.xml" parent="/manifest/application">
			<intent-filter>
			    <action android:name="android.intent.action.VIEW" />
			    <category android:name="android.intent.category.DEFAULT" />
			    <data android:mimeType="application/*" host="*" android:pathPattern=".*.csv" android:scheme="content" />
			</intent-filter>

			<!--  For file browsers -->
			<intent-filter>
			    <action android:name="android.intent.action.VIEW"/>
			    <category android:name="android.intent.category.DEFAULT"/>
			    <data android:mimeType="application/*" host="*" android:pathPattern=".*.csv" android:scheme="file" />
			</intent-filter>

		</config-file>
	</platform>
</plugin>
